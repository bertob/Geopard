{
    "app-id" : "com.ranfdev.Geopard",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "geopard",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--filesystem=xdg-download"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
          "RUST_LOG": "info"
        }
    },
    "modules" : [
        {
            "name" : "Geopard",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dbuildtype=release"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "../",
                    "branch": "master"
                }
            ]
        }
    ]
}
